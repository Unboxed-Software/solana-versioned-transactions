{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "lib": ["es2015"],
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*", "./test/**/*"]
}
